<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ChartActivity"
    android:orientation="vertical"
    >
<LinearLayout
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:visibility="gone"
    ></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >
            <CheckBox
                android:id="@+id/btn_random"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四个周数据"
                />
            <CheckBox
                android:id="@+id/btn_rigth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五个月数据"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>

    </RelativeLayout>

    <com.qj.kaiyan.weight.DoubleLineChatView
        android:id="@+id/doubleline"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"
        app:chatview_animation_duration="0"
        app:chatview_left_background_color="@color/colorAccent"
        app:chatview_left_text_data_color="@color/colorAccent"
        app:chatview_line_big_distance="30dp"
        app:chatview_line_small_distance="3dp"
        app:chatview_line_width="20dp"
        app:chatview_right_background_color="@color/colorPrimaryDark"
        app:chatview_right_text_data_color="@color/colorPrimaryDark"
        app:chatview_show_arrow="true"
        app:chatview_show_y_interval="true"
        app:chatview_text_data_size="14sp"
        app:chatview_text_xy_color="@color/black"
        app:chatview_text_xy_size="14sp"
        app:chatview_x_distance="40dp"
        app:chatview_y_distance="45dp"
        />
    <TextView
        android:id="@+id/totalsale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总销量："
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        />
    <TextView
        android:id="@+id/personsale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人销量："
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        />
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        ></LinearLayout>
    <com.qj.kaiyan.weight.DoublezhuView
        android:id="@+id/doublezhuview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:doubleview_left_color="@color/colorPrimary"
        app:doubleview_right_color="@color/colorAccent"
        app:doubleview_gib_diatance="15dp"
        app:doubleview_small_distance="3dp"
        android:visibility="gone"
        />
    <com.qj.kaiyan.weight.LineChartView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:linechart_mYDistance="40dp"
        app:linechart_mXDistance="25dp"
        app:linechart_pointSize="5dp"
        app:linechart_textSize="13sp"
        app:linechart_distance="35dp"
        app:linechart_pointColor="@color/colorAccent"
        android:visibility="gone"
        />
    <com.qj.kaiyan.weight.CircleProgressBar
        android:id="@+id/circleProgressbar"
        android:layout_width="60dp"
        android:layout_height="60dp" />
</LinearLayout>