<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.SplashActivity"
    android:background="@drawable/landing_background"
    >
<ImageView
    android:id="@+id/iv_splash"
    android:layout_width="60dp"
    android:layout_height="40dp"
    android:layout_centerInParent="true"
    android:background="@drawable/ic_action_focus_white_no_margin"
    />
    <TextView
        android:id="@+id/tv_splash_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenEye"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_splash"
        android:textColor="@color/White"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开眼"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_splash_name"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/tv_splash_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="每日精选视频推介，让你大开眼界。"
        android:textColor="@color/White"
        android:layout_marginBottom="40dp"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily appetizers for your eyes，Bon eyepetit"
        android:textColor="@color/White"
        android:layout_marginBottom="15dp"
        android:layout_above="@id/tv_splash_bottom"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>